{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "tests/*": ["__tests__/*"]
    },
    "target": "ES6",
    "module": "amd",
    "outFile": "lib/index.js",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts", "__tests__/lang/OptionTest.ts"]
}